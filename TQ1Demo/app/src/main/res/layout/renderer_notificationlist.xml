<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <br.com.taqtile.android.textviews.CustomTextView
                android:id="@+id/notification_list_date"
                style="@style/TextElement.Date"
                android:textIsSelectable="false"
                android:padding="@dimen/margin_extra_small"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
            <br.com.taqtile.android.textviews.CustomTextView
                android:id="@+id/notification_list_cell_title"
                style="@style/TextElement.H2"
                android:textIsSelectable="false"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/notification_list_date"
                android:layout_toStartOf="@id/notification_list_date"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"/>
        </RelativeLayout>
        <br.com.taqtile.android.textviews.CustomTextView
            android:id="@+id/notification_list_cell_description"
            style="@style/TextElement.Body"
            android:textIsSelectable="false"
            android:focusableInTouchMode="false"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/margin_extra_small"/>
    </LinearLayout>
    <include layout="@layout/cell_separator">

    </include>
</LinearLayout>
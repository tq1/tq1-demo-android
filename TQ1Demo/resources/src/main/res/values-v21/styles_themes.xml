<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorAccent">@color/color_primary</item>
        <item name="android:colorControlActivated">@color/color_primary</item>
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/color_primary</item>
    </style>

    <style name="TimePickerDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/color_primary</item>
    </style>

    <style name="AlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/color_primary</item>
        <item name="android:textAppearanceMedium">@style/MyAlertTextAppearance</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="MyAlertTextAppearance" parent="TextAppearance.AppCompat.Title">
        <!-- Set text size and color of title and message here -->
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

</resources>

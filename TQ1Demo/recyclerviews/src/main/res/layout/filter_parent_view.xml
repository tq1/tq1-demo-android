<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <LinearLayout
        android:id="@+id/filters_parent_header"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/margin_medium"
        android:background="@color/color_white">

        <br.com.taqtile.android.textviews.CustomTextView
            style="@style/TextElement.H3"
            android:layout_marginLeft="@dimen/margin_medium"
            android:text="@string/filters_slider_title"/>

        <View style="@style/Separator_Horizontal"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg_transparent">

        <br.com.taqtile.android.textviews.CustomTextView
            android:id="@+id/filters_parent_label"
            style="@style/TextElement.H3"
            android:clickable="false"
            android:textIsSelectable="false"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_extra_small"
            />

        <ImageView
            android:id="@+id/filters_parent_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_gravity="center_vertical|right"
            android:scaleType="centerInside"
            android:src="@drawable/ic_filters_arrow_down"/>

        <View style="@style/Separator_Horizontal"/>
    </FrameLayout>

</LinearLayout>